<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:id="@+id/grdcovidRec"
        android:layout_width="79dp"
        android:layout_height="43dp"
        android:background="@color/recoverrowcolor"
        android:gravity="center"
        android:textColor="@color/gridrowtxtcolor" />

    <TextView
        android:id="@+id/grdcovidTot"
        android:layout_width="79dp"
        android:layout_height="44dp"
        android:background="@drawable/rowtextborder"
        android:gravity="center"
        android:textColor="@color/gridrowtxtcolor" />

    <TextView
        android:id="@+id/grdCovidActive"
        android:layout_width="79dp"
        android:layout_height="44dp"
        android:background="@drawable/rowtextborder"
        android:gravity="center"
        android:textColor="@color/gridrowtxtcolor"/>

    <TextView
        android:id="@+id/grdCovidDece"
        android:layout_width="79dp"
        android:layout_height="44dp"
        android:background="@drawable/rowtextborder"
        android:gravity="center"
        android:textColor="@color/gridrowtxtcolor" />


</TableRow>
