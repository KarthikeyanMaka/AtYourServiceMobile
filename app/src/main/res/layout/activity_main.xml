<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Scroll1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="39dp">

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
        </TableRow>


        <include layout="@layout/top_menu" />


        <LinearLayout
            android:id="@+id/constrantid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light"
            android:orientation="vertical"
            android:verticalScrollbarPosition="left"
            tools:context=".MainActivity">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-52dp"
                android:background="#333"
                android:text="@string/app_Diet"
                android:textAlignment="center"
                android:textColor="#fff" />

            <WebView
                android:id="@+id/mWebView1"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnDiet"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyleone"
                android:onClick="PlayNexDietVideo"
                android:text="@string/app_playnxtbtn"
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/constrantid2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light"
            android:orientation="vertical"
            android:verticalScrollbarPosition="left">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="-52dp"
                android:background="#333"
                android:padding="5dp"
                android:text="@string/app_Imm"
                android:textAlignment="center"
                android:textColor="#fff" />

            <WebView
                android:id="@+id/mWebView2"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_marginTop="55dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnImm"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyleone"
                android:onClick="PlayNexImmVideo"
                android:text="@string/app_playnxtbtn"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/constrantid3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light"
            android:orientation="vertical"
            android:verticalScrollbarPosition="left"
            tools:context=".MainActivity">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="-52dp"
                android:background="#333"
                android:padding="5dp"
                android:text="@string/app_HomeRe"
                android:textAlignment="center"
                android:textColor="#fff" />

            <WebView
                android:id="@+id/mWebView3"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_marginTop="55dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnRem"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyleone"
                android:onClick="PlayNexRemVideo"
                android:text="@string/app_playnxtbtn"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/constrantid4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light"
            android:orientation="vertical"
            android:verticalScrollbarPosition="left"
            tools:context=".MainActivity">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="-52dp"
                android:background="#333"
                android:padding="5dp"
                android:text="@string/app_Cov"
                android:textAlignment="center"
                android:textColor="#fff" />


            <WebView
                android:id="@+id/mWebView4"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_marginTop="55dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnExp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyleone"
                android:onClick="PlayNexExpVideo"
                android:text="@string/app_playnxtbtn"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/constrantid5"
            android:layout_height="match_parent"
            android:layout_width="384dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@android:color/background_light"
            android:orientation="vertical"
            android:verticalScrollbarPosition="left"
            tools:context=".MainActivity">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="-52dp"
                android:background="#333"
                android:padding="5dp"
                android:text="@string/app_Med"
                android:textAlignment="center"
                android:textColor="#fff" />

            <WebView
                android:id="@+id/mWebView5"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_marginTop="55dp"
                tools:visibility="visible" />
            <Button
                android:id="@+id/btnMed"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/buttonstyleone"
                style="@style/Widget.AppCompat.Button.Colored"
                android:onClick="PlayNexMedVideo"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/app_playnxtbtn"
                android:visibility="visible"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <include layout="@layout/bottomdisclaimmenu"
            android:layout_gravity="center|bottom"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
</ScrollView>