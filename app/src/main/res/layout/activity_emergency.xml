<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Scroll1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="39dp">

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
        </TableRow>

        <include layout="@layout/top_menu" />

        <TableRow
            android:id="@+id/tblimages"
            android:layout_width="400dp"
            android:layout_height="227dp"
            android:paddingTop="-5dp">

            <ImageView
                android:id="@+id/imghelpline"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_heplline"
                android:onClick="ShowHelplinenumbers"
                android:src="@drawable/helpline" />

            <ImageView
                android:id="@+id/imgCovidHosp"
                android:layout_width="208dp"
                android:layout_height="227dp"
                android:contentDescription="@string/app_heplline"
                android:onClick="ShowCovidHospitals"
                android:src="@drawable/hospitalcovid" />

        </TableRow>


    </LinearLayout>

</ScrollView>