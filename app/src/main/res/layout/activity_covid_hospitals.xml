<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#85DF6767"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="39dp">

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
        </TableRow>

        <include layout="@layout/top_menu" />

        <TableRow
            android:id="@+id/tblData"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:paddingTop="-5dp">

            <TextView
                android:id="@+id/statedplbl2"
                android:layout_width="21dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/app_statelist"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <Spinner
                android:id="@+id/dpStateHos"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
        </TableRow>

        <TableRow
            android:id="@+id/tblCity"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:paddingTop="-5dp">

            <TextView
                android:id="@+id/citylbl"
                android:layout_width="21dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/app_citylist"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <Spinner
                android:id="@+id/dpCity"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

        </TableRow>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#D0B8B6F4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <TextView
                android:id="@+id/lblHosName"
                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:text="@string/app_HosName"
                android:textColor="@color/design_default_color_primary_dark" />

            <TextView
                android:id="@+id/lblHosCity"
                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:text="@string/app_HosCity"
                android:textColor="@color/design_default_color_primary_dark" />

            <TextView
                android:id="@+id/lblHosBeds"
                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:text="@string/app_HosBeds"
                android:textColor="@color/design_default_color_primary_dark" />

            <TextView
                android:id="@+id/lblHosOwner"
                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:text="@string/app_HosOwner"
                android:textColor="@color/design_default_color_primary_dark" />


        </TableRow>

        <TableRow
            android:layout_width="401dp"
            android:layout_height="101dp"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <GridView
                android:id="@+id/gvhosp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@color/grey"
                android:gravity="center"
                android:numColumns="1"
                android:stretchMode="columnWidth" />

        </TableRow>

    </RelativeLayout>
</LinearLayout>



