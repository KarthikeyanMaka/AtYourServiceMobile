<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="@integer/config_navAnimTime" >
    <item>
        <layer-list>
            <item android:state_pressed="true" android:drawable="@android:color/white" />
            <item android:state_selected="true" android:drawable="@android:color/white" />
            <item >
                <bitmap android:gravity="right|center" android:src="@drawable/ic_spinner" />
            </item>
            <item>
                <inset android:insetLeft="-1dp" android:insetRight="-1dp">
                    <shape android:shape="rectangle">
                        <stroke android:width="1dp"
                            android:color="@color/gold"/>
                        <solid android:color="#dcdee0"/>
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>

</selector>