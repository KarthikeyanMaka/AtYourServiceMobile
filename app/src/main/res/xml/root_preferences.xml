<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/app_settings">

        <EditTextPreference
            app:key="userAge"
            app:title="@string/app_userage"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/app_notsettings">

        <SwitchPreferenceCompat
            app:key="notifi"
            app:title="@string/app_requirednot" />
        <EditTextPreference
            app:key="notfimins"
            app:dependency="sync"
            app:title="@string/app_notimins"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

</PreferenceScreen>